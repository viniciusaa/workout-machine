<%= render "shared/error_message", obj: @exercise %>

<div class="mspace card border-secondary col-md-9 col-lg-7">
  <div class="card-header">
    <%= form_for @exercise do |f| %>
      <div class="space space-top">
        <div class="row col-12">
          <b><%= f.label :name %>:</b>
        </div>
        <div class="row col-12">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="space space-top">
        <div class="row col-12">
          <b><%= f.label :sets %>:</b>
        </div>
        <div class="row col-12">
          <%= f.number_field :sets, class: "form-control" %>
        </div>
      </div>

      <div class="space space-top">
        <div class="row col-12">
          <b><%= f.label :duration %> (minutes):</b>
        </div>
        <div class="row col-12">
          <%= f.number_field :duration, class: "form-control" %>
        </div>
      </div>

      <div class="space space-top">
        <div class="row col-12">
          <b><%= f.label :difficulty %> (1 to 5):</b>
        </div>
        <div class="row col-12">
          <%= f.number_field :effort_level, max: 5, min: 1, class: "form-control" %>
        </div>
      </div>

      <div class="row col-12">
        <%= f.submit "Confirm", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mspace">
  <%= link_to "Back to daily workout", workouts_path, class: "btn btn-primary" %>
</div>
